<!-- /*******************All Store routes *********************/
/* [R] Landing page - display all shoe Stores
** Allow user to add a store or delete all stores.
** Each store listing is a link to its individual page. */ -->

<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
        <link rel='stylesheet' href='styles/styles.css' />
        <title>Shoe Stores</title>
    </head>
    <body>
        <!-- start nav -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img alt="Salon" src="/img/heels.jpg" id="heels">
                        <span id="shoes_manager">Sebastian's Super-Duper Shoe Store Manager</span>
                    </a>
                </div>
            </div>
        </nav>
        <!-- end nav -->


        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <div class="panel panel-default" id="stores">
                        <div class="panel-heading">
                            <h3>Stores</h3>
                        </div>
                        <div class="panel-body">
                            {% if all_stores is not empty %}
                                <div class="list-group">
                                    {% for store in all_stores %}
                                        <a class="list-group-item" href="/store/{{ store.getId }}">{{ store.getName }}</a></li>
                                    {% endfor %}
                                </div>

                                <form action="/" method="post">
                                    <input name="_method" type="hidden" value="delete">
                                    <button type="submit" class="btn btn-default btn-md">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        Clear all stores
                                    </button>
                                </form>


                            {% else %}
                                <p>There are no stores yet.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <!-- new store form -->

                    <div class="col-sm-6">
                        <div class="panel panel-default" id="store-form">
                            <div class="panel-heading">
                                <h3>Add new store</h3>
                            </div>
                            <div class="panel-body">
                                <form action="/" class="form-horizontal" method="post">
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="name">Name:</label>
                                        <div class="col-sm-9">
                                            <input id="name" name="name" type="text" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="location">Location:</label>
                                        <div class="col-sm-9">
                                            <input id="location" name="location" type="text" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="phone">Phone:</label>
                                        <div class="col-sm-9">
                                            <input id="phone" name="phone" type="number" maxlength="10" required>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-default btn-md" id="add_stylist">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                        Add Store
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- end new stylist form -->
            </div>
        </div>
    </body>
</html>
